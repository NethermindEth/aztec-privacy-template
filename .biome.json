{
  "$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
  "$version": "2.4.2",
  "vcs": {
    "enabled": false
  },
  "files": {
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/coverage/**",
      "target/**",
      "**/*.sol"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100,
    "indentWidth": 2,
    "lineEnding": "lf",
    "quoteStyle": "single"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
