{
  "name": "create-aztec-privacy-template",
  "version": "0.1.0",
  "description": "CLI to scaffold protocol-agnostic Aztec privacy starter projects",
  "license": "MIT",
  "type": "module",
  "bin": {
    "create-aztec-privacy-template": "dist/cli.js"
  },
  "files": ["dist", "scaffold", "overlays"],
  "scripts": {
    "fmt": "bunx biome format --config-path ../.biome.json --write src test",
    "fmt:check": "bunx biome format --config-path ../.biome.json src test",
    "lint": "bunx biome lint --config-path ../.biome.json src test",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "bun run build && node --test test/**/*.test.mjs",
    "prepack": "bun run build"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  }
}
